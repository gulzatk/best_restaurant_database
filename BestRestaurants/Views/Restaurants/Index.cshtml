@{
  Layout = "_Layout";
}

<div class="container">

  <h1>List of restaurants:</h1>
  @if (@Model.Count == 0)
  {
    <h3>No Restaurants have been added into cuisine yet!</h3>
  }
  @foreach (var restaurant in Model)
  {
    <h3><a href='/cuisines/@cuisine.GetId()/restaurants/@restaurant.GetId()'>@restaurant.GetName() </a> </h3>
  }
  <p><a href='/'>Home Page</a></p>
</div>
